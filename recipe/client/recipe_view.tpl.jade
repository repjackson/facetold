.ui.segment
    h5 Recipe Name: #{recipename}
    h5 Cook: #{cooktime} #{cookunits} + Prep: #{preptime} #{prepunits} = Total: #{totaltimedisplay}
    .ui.segment
        h4 Ingredients
        .ui.relaxed.divided.list
            each ingredients
                .item #{this.amount} #{this.unit} #{this.ingredient} #{this.descriptor}
    .ui.segment
        h4 Steps
        .ui.relaxed.divided.list
            each steps
                .item #{this}