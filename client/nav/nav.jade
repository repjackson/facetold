template(name='nav')
    .ui.menu
        a#homeLink.header.item(href='/' class="{{isActivePath '/'}}")
            img(src='/f_logo.png' height='42' width='42')
        .ui.item
            .ui.icon.input
                i.plus.icon
                input#quickAdd(type='text' autofocus='' placeholder='Quick Add')
        .right.menu
            if currentUser
                a#addDoc.item
                    i.plus.icon
                    |Add
                a.item(href='/unvoted' class="{{isActivePath '/unvoted'}}") Unvoted Documents
                a.item(href='/mine' class="{{isActivePath '/mine'}}") My Documents
                a.item(href='/profile' class="{{isActivePath '/profile'}}") Profile [#{user.points} points]
            +loginButtons align='right'


template(name='tagresult')
    .label.label-default #{name}
        small (#{count})
