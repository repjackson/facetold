template(name='nav')
    nav.light-blue.lighten-1(role='navigation')
        .nav-wrapper.container
            a#logo-container.brand-logo(href='/') Facet
            ul.right.hide-on-med-and-down
                if currentUser
                    li: a(href='/mine') My Docs
                    li: a(href='/bulk') Bulk Editor
                    li: a(href='/importers') Importers
                li
                    +loginButtons align='right'
                li
                    +atNavButton
                li: small #{user_counter} users #{doc_counter} docs
            ul#nav-mobile.side-nav
                if currentUser
                    li: a(href='/mine') My Docs
                    li: a(href='/bulk') Bulk Editor
                    li: a(href='/importers') Importers
                li: #{user_counter} users #{doc_counter} docs
                li
                    +loginButtons
                li
                    +atNavButton
            a.button-collapse(href='#', data-activates='nav-mobile')
                i.material-icons menu
