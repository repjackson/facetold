template(name='home')
    .ui.basic.center.aligned.segment
        .row
            .ui.input
                input#search(type='text', placeholder="Global Search")
            .ui.input
                +inputAutocomplete(settings=tagsettings id='pageDrilldown' class='' placeholder="Drilldown")
        if selectedTags
            #clearTags.ui.icon.button
                i.remove.icon
            each selectedTags
                a.ui.secondary.large.button.unselectTag
                    strong #{this}
        each globalTags
            .ui.button.selectTag(class=globalTagClass) #{this.name}
                // small #{this.count}
    .ui.container
        .ui.cards
            each docs
                .ui.card
                    +view