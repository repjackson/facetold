template(name='home')
    .ui.basic.center.aligned.segment
        .row
            .ui.input
                input#search(type='text', placeholder="Global Search")
            .ui.input
                +inputAutocomplete(settings=tagsettings id='pageDrilldown' class='' placeholder="Drilldown")
            if selectedTags
                #clearTags.ui.primary.labeled.icon.button
                    |Clear Selection
                    i.remove.icon
        if selectedTags
            each selectedTags
                a.ui.primary.huge.button.unselectTag
                    strong #{this}
        each globalTags
            .ui.button.selectTag(class=globalTagClass) #{this.name}
                // small #{this.count}
    .ui.container
        each docs
            .ui.segment
                +viewSmall