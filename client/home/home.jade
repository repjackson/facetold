template(name='home')
    #addDoc.fixed-action-btn(style="bottom: 45px; right: 24px;")
        a.btn-floating.btn-large.teal.darken-3
            i.large.material-icons add
    .card.grey.lighten-4
        .card-content
            .input-field
                input#search(type='text')
                label(for='search') Search tags... (backspace to unselect last, 'clear' to clear all)
            if selected_tags
                #clear_tags.btn-floating.grey
                    i.material-icons close
            each selected_tags
                .unselect_tag.grey.chip
                    |#{this}
            each global_tags
                .select_tag.chip
                    |#{this.name}
                    small #{this.count}
    .container
        each docs
            .card.grey.lighten-4
                +view


template(name='dataPiece')
    span.label #{name}
