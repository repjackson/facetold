template(name='home')
    .row
        .col.s12
            +inputAutocomplete(settings=settings id="search" class="field-input" placeholder="Search Tags...")
            if selected_tags
                #clear_tags.btn-floating.grey
                    i.material-icons close
            each selected_tags
                .unselect_tag.grey.chip
                    |#{this}
            each global_tags
                .select_tag.chip
                    |#{this.name}
                    small #{this.count}
    .container
        each docs
            .card
                +view


template(name='dataPiece')
    span.label #{name}
