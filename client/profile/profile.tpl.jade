with user
    .container
        .ui.segment
            .ui.header Clouds
            #generatePersonalCloud.ui.icon.button
                i.refresh.icon
            if authoredCloud
                .ui.segment
                    .ui.header Authored Cloud
                    each authoredCloud
                        .ui.button
                            |#{this.name}
                            small #{this.count}
            if upvotedCloud
                .ui.basic.segment
                    .ui.header Upvoted Cloud
                    each upvotedCloud
                        .ui.label
                            |#{this.name}
                            small #{this.count}
            if downvotedCloud
                .ui.header Downvoted Cloud
                each downvotedCloud
                    .ui.label
                        |#{this.name}
                        small #{this.count}
        .ui.segment
            .ui.header Top Matched Users
                .ui.divided.list
                each people
                    .item
                        |#{this.username}
                        .ui.button.matchTwoUsersAuthoredCloud Calculate Authored Match
                        .ui.button.matchTwoUsersUpvotedCloud Calculate Upvoted Match
                .ui.header Authored Docs Tag Cloud Matches
                each authoredCloudMatches
                    .ui.divided.list
                        .item
                            | #{this.username}
                            each userMatchAuthoredCloud
                                .ui.button
                                    |#{this.name}
                                    small #{this.count}
                .ui.header Upvoted Docs Tag Cloud Matches
                each upVotedCloudMatches
                    .ui.divided.list
                        .item
                            | #{this.username}
                            each userMatchUpvotedCloud
                                .ui.button
                                    |#{this.name}
                                    small #{this.count}
