                #generatePersonalCloud.btn.btn-default (re)Generate Personal Cloud
                if authored_cloud
                    .well Authored Cloud
                        each authored_cloud
                            .btn.btn-link(disabled='disabled')
                                |#{this.name}
                                small #{this.count}
                if upvoted_cloud
                    .well Upvoted Cloud
                        each upvoted_cloud
                            .btn.btn-link(disabled='disabled')
                                |#{this.name}
                                small #{this.count}
                if downvoted_cloud
                    .well Downvoted Cloud
                        each downvoted_cloud
                            .btn.btn-link(disabled='disabled')
                                |#{this.name}
                                small #{this.count}
                strong Top Matched Users
                .row
                    // #calculateUserMatch.btn Calculate User Matches
                    ul.list-group
                        each usernames
                            a.list-group-item.calculateUserMatch #{this.text}