template(name='edit')
    with doc
        .container
            .panel.panel-default
                .panel-heading
                    each tags
                        .btn.btn-default.docTag
                            span.glyphicon.glyphicon-minus
                            |#{this}
                .panel-body
                    // .form-horizontal
                    // .form-inline
                    .form-group
                        label(for='addTag')  add tag
                        input#addTag.form-control(type=text autofocus='')
                    // .form-inline
                    .form-group
                        label(for='place') add address
                        input#place.form-control(type='text' value=locationob.formatted_address)
                    // .form-inline
                    .form-group
                        label(for='datetimepicker') add date/time
                        input#datetimepicker.form-control(type="text" value=dateTime)
                        // .btn.btn-info.clearDT clear date/time
                    // .form-inline
                    .form-group
                        label(for='url') get url text
                        input#url.form-control(type="text" value=url)
                    // .btn-group(data-toggle='buttons')
                    //     label.btn.btn-primary.active
                    //         input(type='checkbox', autocomplete='off', checked='')
                    //         |  Checkbox 1 (pre-checked)
                    .checkbox
                        label
                            input(type="checkbox" id="personal" checked=personal)
                            |private
                    .checkbox
                        label
                            input(type='checkbox' id='auctionable' checked=auctionable)
                            |auctionable
                    if auctionable
                        .panel.panel-default
                            .panel-heading auction settings
                            .panel-body
                                .form-group
                                    label(for='auctionDateTimePicker') expiration date
                                    input#auctionDateTimePicker.form-control(type="text" value=auctionEndDateTime)
                    if unpickedKeywords.length
                        .panel.panel-default
                            .panel-heading suggestions
                            .panel-body
                                div keywords
                                    each unpickedKeywords
                                        .docKeyword.btn.btn-default #{this}
                                .card-action
                                    a#addAll add all suggestions
                .well
                    #analyzeBody.btn.btn-default autotag body
                    +CodeMirror id="body" options=editorOptions code=body
                .panel-footer
                    a#saveDoc.btn.btn-primary save
                    a#deleteDoc.btn.btn-danger.btn-sm.pull-right delete
