.panel.panel-default
    .panel-heading
        span.glyphicon.glyphicon-tags
        each tags
            .btn.btn-sm.doc_tag(class=doc_tag_class)= this
    if body.length
        .panel-body
            +markdown
                #{body}
    .panel-footer
        if isAuthor
            a.btn.btn-default.editDoc
                span.glyphicon.glyphicon-pencil
                |Edit
        if currentUser
            // a.btn.btn-info.cloneDoc Clone
            unless isAuthor
                .btn.btn-group
                    a.vote_up.btn.btn-info(class=vote_up_button_class)
                        |Vote Up
                        span.glyphicon.glyphicon-thumbs-up
                    a.vote_down.btn.btn-info(class=vote_down_button_class)
                        |Vote Down
                        span.glyphicon.glyphicon-thumbs-down
        if points
            span.label.label-info Points: #{points}
        span.label.label-default by #{username} #{when}
        .btn.btn-default.findTopDocMatches Find Top Matches
        if topDocMatches
            ul.list-group Top Matches
                each topDocMatches
                    li.list-group-item #{this.docId}
                        each this.intersectionTags
                            span.badge #{this}