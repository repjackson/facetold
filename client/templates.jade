body
    +home


template(name='home')
    unless $.Session.get 'editing'
        .ui.center.aligned.segment
            .ui.large.label
                +loginButtons
            if currentUser
                #add.ui.icon.button: i.plus.icon
            .ui.left.icon.input
                i.search.icon
                input#search(type='text' placeholder="Search/'clear'" autofocus='')
            if selectedtags
                #cleartags.ui.circular.grey.icon.button
                    i.remove.icon
            each selectedtags
                .unselecttag.ui.large.compact.grey.button
                    i.minus.icon
                    |#{this}
            each globaltags
                .selecttag.ui.large.compact.button
                    |#{this.name}
                    small   #{this.count}
    each docs
        .ui.segment
            if is_editing
                +edit
            else
                +view


template(name='view')
    .body
        |{{nl2br body}}
    .ui.basic.segment
        each tags
            .ui.large.label #{this}
    .footer
        |#{when} by #{author.username}
        if currentUser
            if isAuthor
                .edit.ui.button Edit


template(name='edit')
    .ui.segment
        .ui.header Document Tags
        each tags
            .ui.button.large.compact.removetag
                i.minus.icon
                |#{this}
        .ui.left.icon.small.input
            i.plus.icon
            input#addtag(type='text' autofocus='')
    .ui.segment
        .ui.header
            |Suggested Tags
            #suggest_tags.ui.compact.button Suggest Tags from Body
        each unique_suggested_tags
            .ui.compact.button.add_suggested_tag
                i.plus.icon
                |#{this}
    // .ui.form
    //     .field
    //         textarea#body #{body}
    +CodeMirror id="body" name="someName" options=editorOptions code=body

    .actions
        #save.ui.button
            i.check.icon
            |Save
        #delete.ui.icon.button: i.trash.icon