head
    title Facet
    meta(name='viewport', content='user-scalable=no, initial-scale=1.0, maximum-scale=1.0, width=device-width')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')

body
    +home

template(name='edit')
    with doc
        +CodeMirror id="body" options=editorOptions code=body
        .ui.basic.center.aligned.segment
            #saveDoc.ui.huge.circular.icon.button: i.check.icon
            #deleteDoc.ui.small.circular.icon.button: i.remove.icon


template(name='home')
    .ui.secondary.basic.segment
        if currentUser
            .ui.icon.button#addDoc: i.plus.icon
        .ui.large.label
            +loginButtons
        if selected_tags
            #clear_tags.ui.grey.icon.button
                i.remove.icon
        each selected_tags
            .unselect_tag.ui.grey.button
                b #{this}
        each global_tags
            .select_tag.ui.button #{this.name}
        if $.Session.get 'editing'
            +edit
        else
            each docs
                +view


template(name='view')
    .ui.basic.center.aligned.segment
        +markdown
            #{body}
        if isAuthor
            .ui.big.icon.button.editDoc: i.pencil.icon