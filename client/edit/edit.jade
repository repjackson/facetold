template(name='edit')
    with doc
        .ui.container
            .ui.segment
                .ui.segment
                    .ui.header Document Tags
                    each tags
                        .chip.docTag
                            i.material-icons close
                            |#{this}
                    .ui.left.icon.input
                        i.plus.icon
                        input#addTag(type=text placeholder='Manual add...' autofocus='')
                .ui.input
                    input#place(type='text' placeholder='Add Address')
                .ui.input
                    input#datetimepicker(type="text" value=dateTime placeholder='Add Date/Time')
                    .btn.clearDT Clear Date/Time
                if keywords
                    .ui.segment
                        .ui.header Suggestions
                        if keywords
                            div Keywords
                                each keywords
                                    .docKeyword.btn(class=docKeywordClass) #{text}
                        if concepts
                            div Concepts
                                each concepts
                                    .docKeyword.btn(class=docKeywordClass) #{text}
                if sentiment
                    |Sentiment: #{docSentiment.type} #{docSentiment.score}
                if language
                    |Language: #{language}
                if taxonomy
                    p Taxonomy
                    each taxonomy
                        .ui.label
                            div #{label}
                            // div Score: #{score}
                            // div Confident: #{confident}
                .ui.basic.segment
                    #analyzeBody.btn Analyze Body
                    +CodeMirror id="body" options=editorOptions code=body
                #saveDoc.btn Save
                #deleteDoc.btn Delete